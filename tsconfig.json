{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": false,       // Disable unused variable errors
    "noUnusedParameters": false,   // Disable unused parameter errors
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "*": ["*", "utils/*", "components/*", "pages/*", "services/*", "types/*", "config/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/components/LoadingAnimation/animations"
    ]
  },
  "include": [
    "src"
  ]
}
